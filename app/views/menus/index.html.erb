<div class="page-header">
  <h1>    Menu Items  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Description</th>
        <th>Price</th>
        <th>Created</th>
        <th>Updated</th>
        <th></th>
      </tr>

      <% @item.each do |pointer| %>
      <tr>
        <%= link_to menu_path(pointer.id) do %>
          <td><%= pointer.name %></td>
          <td><img src="<%= pointer.photo %>" width="50"></td>
          <td><%= pointer.description %></td>
          <td><%= pointer.price %></td>
           <!-- format the display of the time -->
          <td> <%= pointer.created_at.strftime("%b %e, %l:%M %p") %></td> <!-- http://www.foragoodstrftime.com/ -->
          <td> <%= pointer.updated_at.strftime("%b %e, %l:%M %p") %></td>
        <% end %> 
        <td>
        
        <% if current_user.present? %>
          <div class="btn btn-warning"> <%= link_to "Edit", edit_menu_url(pointer.id) %> </div>
          <div class="btn btn-danger">  <%= link_to "Delete", menu_url(pointer.id), :method => :delete, :data => {:confirm => "Are you sure?" } %> </div>
        <% end %>  
         
          <div class="btn btn-primary"> <%= link_to "Show", menu_url(pointer.id) %> </div>
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>