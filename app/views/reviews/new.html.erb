<!-- Validation failure messages -->

<% if @item.errors.present? %>
    <p>The following error prevented your menu item for being saved</p>
    <ul>
      <% @item.errors.full_messages.each do |message| %>
       <li> <%= message %></li>
       <% end %>
   </ul>
<% end %>

<div class="page-header">
  <h1>Enter your comment </h1>
</div>

<%= form_tag(reviews_path)   do  %>
   
    
     <div class="block">
        <label for="name"> Name:
            <input type="text" id="name" name="name"  value=<%=@item.name %>>
        </label> <br> <br>
    </div>
    
    <div class="block">
        <label for="city"> City:
            <input type="text" id="city" name="city"  value=<%=@item.city %> >
        </label> <br> <br>
    </div>
    
    <div class="block">
        <label for="state"> State:
            <input type="text" id="state" name="state"  value=<%=@item.state %> >
        </label> <br> <br>
    </div>
  
     <div class="block">
        <label for="message"> Comment:
            <textarea type="text" id="message" name="message" > <%=@item.message %> </textarea>
        </label> <br> <br>
    </div>
     <div class="block">
        <label for="rate"> Rating:
            <input type="text" id="rate" name="rate"  value=<%=@item.rate %>>
        </label> <br> <br>
    </div>
  
    <div class="form-group"> 
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" lass="btn btn-default">Submit</button>
        </div>
    </div>
   
<% end %>


