<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Menu Item #<%= @item.id %></h1>
</div>

<%= form_tag(menu_path(@item.id), :method => :patch)  do  %>
   
    <div class="block">
        <label for="name"> Item name:
            <input type="text" id="name" name="name"  value=<%=@item.name %>>
        </label> <br> <br>
    </div>
    
    <div class="block">
        <label for="photo"> Photo:
            <input type="text" id="photo" name="photo"  value=<%=@item.photo %> >
        </label> <br> <br>
    </div>
    
    <div class="block">
        <label for="description"> Description:
            <textarea type="text" id="description" name="description" > <%=@item.description %> </textarea>
        </label> <br> <br>
    </div>
    
    <div class="block">
        <label for="price"> Price:
            <input type="text" id="price" name="price"  value=<%=@item.price %> >
        </label> <br> <br>
    </div>
    
    
    
    <button type="button" class="btn btn-primary">
      <a href="/menus"> Back   </a>
    </button>
    <input type="submit"> <br>
    
<% end %>


