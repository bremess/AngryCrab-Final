<div class="page-header">
  <h1> Orders  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>E-mail</th>
        <th>Phone</th>
        <th>Pickup_time</th>
        <th>Created</th>
        <th>Updated</th>
        <th></th>
        
      </tr>

      <% @item.each do |pointer| %>
      <tr>
        <%= link_to order_path(pointer.id) do %>
          <td><%= pointer.fname %></td>
          <td><%= pointer.lname %></td>
          <td><%= pointer.email %></td>
          <td><%= pointer.phone %></td>
          <td><%= pointer.pickup_time %></td>
           <!-- format the display of the time -->
          <td> <%= pointer.created_at.strftime("%b %e, %l:%M %p") %></td> <!-- http://www.foragoodstrftime.com/ -->
          <td> <%= pointer.updated_at.strftime("%b %e, %l:%M %p") %></td>
        <% end %> 
        <td>
         
          <div class="btn btn-primary"> <%= link_to "Show", order_url(pointer.id) %> </div>
          <div class="btn btn-warning"> <%= link_to "Edit", edit_order_url(pointer.id) %> </div>
          <div class="btn btn-danger">  <%= link_to "Delete", order_url(pointer.id), :method => :delete, :data => {:confirm => "Are you sure?" } %> </div>
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>