<div class="page-header">
  <h1> Reviews  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>City</th>
        <th>State</th>
        <th>Comment</th>
        <th>Rating</th>
        <th>Created</th>
        <th>Updated</th>
        <th></th>
      </tr>

      <% @item.each do |review| %>
      <tr>
        <%= link_to review_path(review.id) do %>
          <td><%= review.name %></td>
          <td><%= review.city %></td>
          <td><%= review.state %></td>
          <td><%= review.message %></td>
          <td><%= review.rate %></td>
           <!-- format the display of the time -->
          <td> <%= review.created_at.strftime("%b %e, %l:%M %p") %></td> <!-- http://www.foragoodstrftime.com/ -->
          <td> <%= review.updated_at.strftime("%b %e, %l:%M %p") %></td>
        <% end %> 
        <td>
         <% if current_user.present?   %>
          <div class="btn btn-warning"> <%= link_to "Edit", edit_review_url(review.id) %> </div>
          <div class="btn btn-danger">  <%= link_to "Delete", review_url(review.id), :method => :delete, :data => {:confirm => "Are you sure?" } %> </div>
        <% else %>
          <div class="btn btn-primary"> <%= link_to "Show", review_url(review.id) %> </div>
        <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    
  </div>
</div>